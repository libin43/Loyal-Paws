<div class="register-photo">
    <div class="form-container">
        <div class="image-holder"></div>
        <form action="/signup" method="post" >
            <h1 class="text-center"><strong>PawsIndia</strong></h2>
                <h2 class="text-center">Create an account.</h2>
                <div class="form-group pt-3">
                    <input class="form-control" id="contact-name" type="text" name="name" placeholder="Full Name" onkeyup="validateName()">
                    <span id="name-error" style="color: red;"></span>
                </div>

                <div class="form-group pt-3">
                    <input class="form-control" id="contact-email" type="email" name="email" placeholder="Email" onkeyup="validateEmail()">
                    <span id="email-error" style="color: red;"></span>
                </div>
                <div class="form-group pt-3">
                    <input class="form-control" id="contact-phone" type="text" name="phone" placeholder="Mobile" onkeyup="validatePhone()">
                    <span id="phone-error" style="color: red;"></span>
                </div>
                <div class="form-group pt-3">
                    <input class="form-control" id="contact-password" type="password" name="password" placeholder="Password" onkeyup="validatePassword()">
                    <span id="password-error" style="color: red;"></span>
                </div>


                <div class="form-group pt-3">
                    <div class="form-check"><label class="form-check-label"><input class="form-check-input"
                                type="checkbox">I agree to the license terms.</label></div>
                </div>

                {{#if emailExistError}}
                <span style="color: red;">User Already Exists </span>
                {{/if}}

               

                <div class="form-group"><button class="btn btn-primary btn-block" type="submit" onclick="return validateForm()">Signup</button></div><a
                    href="/signin" class="already">You already have an account? Login here.</a>
                    <div id="submit-error" style="color: red;"></div>
        </form>
    </div>
    </div>
   