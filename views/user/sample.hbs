<section class="slider">
						<ul id="autoWidth" class="cs-hidden">
					
							<li class="item-a">
								{{#each prod_data}}
					
								<div class="box">
					
									<div class="slide-img">
										<img alt="1" src="../product-images/{{this._id}}.jpg">
					
										<div class="overlay">
					
											<a href="#" class="buy-btn">Buy Now</a>
										</div>
									</div>
					
									<div class="detail-box">
					
										<div class="type">
											<a href="#">{{this.product}}</a>
