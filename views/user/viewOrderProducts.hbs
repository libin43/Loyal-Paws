
<div class="super_container">
  <section class="h-100 gradient-custom" style="margin-top: 50px;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-10 col-xl-8">
        <button class="btn btn-success text-white" onclick="generatePDF()">Download Invoice</button>
    <div class="mt-5" id="invoice">
        <div class="card" style="border-radius: 10px;">
          <div class="card-header px-4 py-5">
            <h5 class="text-muted mb-0">Thanks for your Order, <span style="color: #904606;">{{userName}}</span> !</h5>
          </div>
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <p class="lead fw-normal mb-0" style="color: #904606;">Receipt</p>
                  <p class="text-muted mb-0">Invoice Date : {{commonDetail.date}}</p>
                  {{!-- <button  class="btn btn-danger" style="border-radius: 15px; background-color: rgb(245, 21, 21); color: white;" onclick="orderCancel('{{orderId}}')">Cancel Order</button> --}}
            </div>
            {{#each orderProducts}}
            <div class="card shadow-0 border mb-4">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-2">
                    <img src="../product-images/{{this.orderProduct.imageMany.[0]}}"
                      class="img-fluid" alt="Phone">
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0">{{this.orderProduct.product}}</p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">White</p>
                  </div>
                 
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">Qty: {{this.quantity}}</p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">Price: {{this.orderProduct.price}}</p>
                  </div>
                </div>
                <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                <div class="row d-flex align-items-center">
                  <div class="col-md-2">
                    <p class="text-muted mb-0 small">Track Order</p>
                  </div>
                  <div class="col-md-10">
                    <div class="progress" style="height: 6px; border-radius: 16px;">
                      {{#isEqual this.status 'Placed'}}
                      <div class="progress-bar" role="progressbar"
                        style="width: 10%; border-radius: 16px; background-color:  #904606;;" aria-valuenow="65"
                        aria-valuemin="0" aria-valuemax="100"></div>
                        {{/isEqual}}
                        {{#isEqual this.status 'Shipped'}}
                      <div class="progress-bar" role="progressbar"
                        style="width: 30%; border-radius: 16px; background-color:  #904606;;" aria-valuenow="65"
                        aria-valuemin="0" aria-valuemax="100"></div>
                        {{/isEqual}}
                          {{#isEqual this.status 'On the Way'}}
                      <div class="progress-bar" role="progressbar"
                        style="width: 95%; border-radius: 16px; background-color:  #904606;;" aria-valuenow="65"
                        aria-valuemin="0" aria-valuemax="100"></div>
                        {{/isEqual}}
                          {{#isEqual this.status 'Delivered'}}
                      <div class="progress-bar" role="progressbar"
                        style="width: 100%; border-radius: 16px; background-color:  #904606;;" aria-valuenow="65"
                        aria-valuemin="0" aria-valuemax="100"></div>
                        {{/isEqual}}
                    </div>
                    <div class="d-flex justify-content-around mb-1">
                      <p class="text-muted mt-1 mb-0 small ms-xl-5">{{this.status}}</p>
                      
                     
                    </div>
                  </div>
                  <div class="">
                                      <button  class="btn btn-danger" style="border-radius: 6px; background-color: rgb(245, 21, 21); color: white;" onclick="orderCancel('{{../orderId}}','{{this.item}}')">Cancel Order</button>

                  </div>
                </div>
              </div>
            </div>
              {{/each}}
           
            <div class="d-flex justify-content-between pt-2">
              <p class="fw-bold mb-0">Order Details</p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">Sub Total</span> &#8377; {{commonDetail.noCouponTotal}}</p>
            </div>

            <div class="d-flex justify-content-between pt-2">
              <p class="text-muted mb-0">Invoice Number : 788152</p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">Discount</span>&#8377; {{commonDetail.discount}}</p>
            </div>

            <div class="d-flex justify-content-between">
              <p class="text-muted mb-0">Invoice Date : {{commonDetail.date}}</p>
              
            </div>

            
          </div>
          <div class="card-footer border-0 px-4 py-5"
            style="background-color:  #904606; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
            <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total
              paid:  <span class="h2 mb-0 ms-2">&#8377; {{commonDetail.total}}</span></h5>
          </div>
        
        </div>
        </div>
      </div>
    </div>
  </div>
</section>
</div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.3/html2pdf.bundle.min.js"></script>  
<script src="../js/export2pdf.js"></script>
<script>
  function orderCancel(orderId,itemId){
    console.log(orderId)
	$.ajax({
		url: '/cancel-order',
		data: {
			 orderID : orderId,
       itemID : itemId,
			cancelStatus: 'Cancelled'
		},
		method: 'post',
		 success:(response)=>{
			console.log(response.status)
            if(response.status){
                alert('Order Cancelled')
                location.reload()
            }
        }
	})
}

   
     function generatePDF() {
        const element = document.getElementById('invoice');
		element.style.width = '700px';
		element.style.height = '900px';
		let opt = {
			margin: 10,
			filename: 'loyalpaws.pdf',
			image:{type:'jpeg',quality:0.98},
			html2canvas :{scale:1},
			jsPDF:{unit:'mm',orientation:'portrait'}

		}
        html2pdf().set(opt)
            .from(element)
            .save();

           }

</script>