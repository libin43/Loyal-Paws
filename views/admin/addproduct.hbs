<main id="main" class="main" style="background-color: rgb(229, 213, 152);">

    <div class="pagetitle">
        <h1>Add product</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="/admin/product">Product</a></li>
                <li class="breadcrumb-item active">Add Product</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section" >
        <div class="row">

            <div class="col-lg-10">

                <div class="card" style="background-color: rgb(250, 245, 211);">
                    <div class="card-body">
                        <h5 class="card-title">Floating labels Form</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3" action="/admin/add-product" method="post" enctype="multipart/form-data">
                            <div class="col-md-10">
                                <div class="form-floating">
                                    <input name="product" type="text" class="form-control" id="floatingName"
                                        placeholder="State" required>
                                    <label for="floatingName">Title</label>
                                </div>
                            </div>
                            
                        
                            

                           
                           
                           <div class="col-12">
                                <div class="form-floating">
                                    <textarea name="description" class="form-control" placeholder="Address"
                                        id="floatingTextarea" style="height: 100px;" required></textarea>
                                    <label for="floatingTextarea">Product Description</label>
                                </div>
                            </div>

                             <div class="col-md-3">
                                <div class="form-floating mb-3">
                                    <select name="category" class="form-select" id="floatingSelect" aria-label="State">
                                          <option selected></option>
                                        {{#each category_data}}
                                      
                                        <option value="{{this.category}}">{{this.category}}</option>
                                        {{/each}}
                                        
                                    </select>
                                    <label for="floatingSelect">Category</label>
                                </div>
                            </div>
                           
                            <div class="col-md-3">
                                <div class="form-floating">
                                    <input name="price" type="number" class="form-control" id="originalPrice" 
                                        placeholder="City" required>
                                    <label for="floatingCity">Price</label>
                                </div>
                            </div>
                            
                             <div class="col-md-3">
                                <div class="form-floating">
                                    <input name="productOffer" type="number" class="form-control" id="offer" onkeyup="calculate()"
                                        placeholder="City">
                                    <label for="floatingCity">Product Offer %</label>
                                </div>
                            </div>

                            <div class="col-md-4 mb-4">
                                <div class="form-floating">
                                    <input name="productOffer" type="number" class="form-control" id="offerPrice"
                                        placeholder="City">
                                    <label for="floatingCity">Offer Price</label>
                                </div>
                            </div>

                            
                          
                            
                           
                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-2 col-form-label">Image Upload</label>
                                <div class="col-sm-10 w-75">
                                    <input type="file" class="form-control" required multiple name="imageMany">
                                </div>

                                
                            </div>
                           
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Add</button>
                                <button type="reset" class="btn btn-secondary">Cancel</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                    </div>
                </div>
            </div>





        </div>
    </section>

</main><!-- End #main -->


<script>
    function calculate() {
        var originalPrice = document.getElementById('originalPrice').value
        console.log(originalPrice, 'orggggggggggg')
        var offer = document.getElementById('offer').value
        console.log(offer, 'offfffffffffffff')
        var firstStep = (originalPrice / 100) * offer
        var offerPrice = originalPrice - firstStep
        console.log(offerPrice, 'resssssssssssss')
        document.getElementById('offerPrice').value = offerPrice
    }
</script>