



  <main id="main" class="main">

    <div class="pagetitle">
      <h1> CATEGORY MANAGEMENT</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Tables</li>
          <li class="breadcrumb-item active">General</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-12">

          <div class="card ">
            <div class="card-body">
              <h5 class="card-title">Table</h5>

            <div class="row pb-3 ">
                <a class="w-25" href="/admin/add-category"> {{!-- user adding option --}}
                    <button type="button" class="btn btn-success">Add Category +</button>
                </a>
            </div>

              <!-- Default Table -->
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">NO</th>
                    <th scope="col">IMAGE</th>
                    <th scope="col">NAME</th>
                    <th scope="col">DESCRIPTION</th>
                    <th scope="col">ACTION</th>
                  </tr>
                </thead>
                <tbody>

                 {{#each category_data}}
                  <tr>
                    <th scope="row" class="create_index"></th>
                    <td><img style="width: 50px;height: 50px;" src="../category-images/{{this.image}}" alt=""></td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td>
                        <a href="/admin/edit-category?id={{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-category/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm ('Are you sure to delete {{this.category}}?')">Delete</a>
                    </td>
                  </tr>
                  {{/each}}

                </tbody>
              </table>
              <!-- End Default Table Example -->
            </div>
          </div>

        


        </div>
      </div>
    </section>

  </main><!-- End #main -->

  <script>
var divs = document.querySelectorAll('.create_index'); for (var i = 0; i < divs.length; ++i) { divs[i].innerHTML = i + 1 ;}
</script>





