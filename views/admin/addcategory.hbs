

  <main id="main" class="main">


          <div class="card">
            <div class="card-body">
              <h2 class="card-title">Add Category</h2>

              <!-- Horizontal Form -->
              <form action="/admin/add-category" method="post" enctype="multipart/form-data">
                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Name</label>
                  <div class="col-sm-10 w-50">
                    <input name="category" type="text" class="form-control" id="inputText">
                  </div>
                </div>
               
              
                
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Description</label>
                    <div class="col-sm-10">
                
                        <textarea name="description" rows="5" class="form-control" id="inputText"></textarea>
                    </div>
                </div>
               
                <div class="row mb-3">
                    <label for="inputNumber" class="col-sm-2 col-form-label">Image Upload</label>
                    <div class="col-sm-10 w-75">
                        <input type="file" class="form-control" name="image">
                    </div>
                </div>

             
               
                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Add</button>
                  <button type="reset" class="btn btn-secondary">Cancel</button>
                </div>
              </form><!-- End Horizontal Form -->

            </div>
          </div>