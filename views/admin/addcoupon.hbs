<main id="main" class="main">

    <div class="pagetitle">
        <h1>Add Coupon</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="/admin/coupon">Coupon</a></li>
                <li class="breadcrumb-item active">Add Coupon</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section" >
        <div class="row">

            <div class="col-lg-10">

                <div class="card">
                    <div class="card-body">
                     

                        <!-- Floating Labels Form -->
                        <form class="row g-3" action="/admin/add-coupon" method="post">
                            <div class="col-md-10">
                                <div class="form-floating">
                                    <input name="code" type="text" class="form-control mt-5" id="floatingName"
                                        placeholder="State" required>
                                    <label for="floatingName">Coupon Code</label>
                                </div>
                            </div>
                            
                             <div class="col-md-4 mb-4">
                                <div class="form-floating">
                                    <input name="addDate" type="date" class="form-control" id="OfferStart" value=""
                                        placeholder="City">
                                    <label for="floatingCity">ADD DATE</label>
                                </div>
                            </div>
                     

                             <div class="col-md-4 mb-4">
                                <div class="form-floating">
                                    <input name="expiry" type="date" class="form-control" id="catOffer" value=""
                                        placeholder="City">
                                    <label for="floatingCity">EXPIRY DATE</label>
                                </div>
                            </div>

                           <div class="row"></div>

                            <div class="col-md-3">
                                <div class="form-floating">
                                    <input name="minSpend" type="number" class="form-control" id="originalPrice" onkeyup="calculate()"
                                        placeholder="City" required>
                                    <label for="floatingCity">Valid From Rs.</label>
                                </div>
                            </div>
                            
                             <div class="col-md-3">
                                <div class="form-floating">
                                    <input name="maxSpend" type="number" class="form-control" id="originalPrice" onkeyup="calculate()"
                                        placeholder="City" required>
                                    <label for="floatingCity">Max Rs.</label>
                                </div>
                            </div>


                             <div class="col-md-4 mb-4">
                                <div class="form-floating">
                                    <input name="couponOffer" type="number" class="form-control" id="offerPrice" placeholder="City">
                                    <label for="floatingCity">Coupon Offer %</label>
                                </div>
                            </div>

                         

                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea name="description" class="form-control" placeholder="Address"
                                        id="floatingTextarea" style="height: 100px;" required></textarea>
                                    <label for="floatingTextarea">Coupon Description</label>
                                </div>
                            </div>

                            
                           
                          
                           
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Add</button>
                                <button type="reset" class="btn btn-secondary">Cancel</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                    </div>
                </div>
            </div>





        </div>
    </section>

</main><!-- End #main -->

<script>
    


    function viewImage(event) {
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
    }



</script>


