                <div class="card-body">
                  <h5 class="card-title">Reports <span>- Last 12 Months</span></h5>

                  <!-- Line Chart -->
                 <canvas class="mx-auto" id="myChart" style="width:100%;max-width:80%"></canvas>

                <script>
                  //Seperating datas into seperate array of months and revenue//
                  const month = []
                  {{#each monthlygraph}}
                  month.unshift('{{this.month}}')
                  {{/each}}
                  console.log(month,'monnnnnnnnnnnnnnnnnnn')

                  const monthlyRevenue = []
                  {{#each monthlygraph}}
                  monthlyRevenue.unshift('{{this.totalAmount}}')
                  console.log(monthlyRevenue,'monnnnnnnnnnnnnnnnnnn')
                  {{/each}} 

                  //----------------------------------------------------------//


                  var xValues = ["Italy", "France", "Spain", "USA", "Argentina"];
                  var yValues = [55, 49, 44, 24, 15];
                  var barColors = [ "blue","blue","blue","blue","blue","blue","blue","blue","blue","blue","blue","blue"];

                  new Chart("myChart", {
                    type: "bar",
                    data: {
                      labels: month,
                      datasets: [{
                        backgroundColor: barColors,
                        data: monthlyRevenue
                      }]
                    },
                    options: {
                      legend: { display: false },
                      title: {
                        display: true,
                        text: "Monthly Sales Report"
                      }
                    }
                  });
                </script>
                 
                  

                  
                  <!-- End Line Chart -->

                </div>

              </div>
            </div><!-- End Reports -->


            <!-- Recent Sales -->
            <div class="col-12">
              <div class="card recent-sales overflow-auto">

               

                <div class="card-body">
                  <h5 class="card-title">Recent Sales</h5>

                  <table class="table ">
                    <thead>
                      <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Customer</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Payment</th>
                        <th scope="col">Total</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each recentSale}}
                      <tr>
                        <th scope="row" class="create_index"></th>
                        <td>{{this.deliveryDetails.name}}</td>
                        <td>{{this.deliveryDetails.mobile}}</td>
                        <td>{{this.paymentMethod}}</td>
                        <td>{{this.totalAmount}}</td>
                      </tr>
                      {{/each}}
                    
                      
                      
                      
                    </tbody>
                  </table>

                </div>

              </div>
            </div><!-- End Recent Sales -->

           

          </div>
        </div><!-- End Left side columns -->

        <!-- Right side columns -->
        <div class="col-lg-12">

          

          

          <!-- Website Traffic -->
